{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/env.d.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": [
    "src/**/__tests__/*",
    "node_modules",
    ".tmp",
    "**/*.tsbuildinfo",
    "**/NotificationTableBody.vue"
  ],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vite/client"],
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "target": "ES2020"
  }
}
