{
  "name": "bakong-notification-service",
  "version": "1.0.0",
  "description": "Bakong Notification Service",
  "private": true,
  "workspaces": [
    "apps/*",
    "apps/packages/*"
  ],
  "scripts": {
    "dev": "cd apps/backend && npm run dev",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:frontend\"",
    "build": "cd apps/backend && npm run build",
    "build:frontend": "cd apps/frontend && npm run build",
    "build:shared": "cd apps/packages/shared && npm run build",
    "build:all": "npm run build:shared && npm run build && npm run build:frontend",
    "start": "cd apps/backend && npm run start",
    "lint": "cd apps/backend && npm run lint && cd ../frontend && npm run lint",
    "lint:check": "cd apps/backend && npm run lint:check && cd ../frontend && npm run lint:check",
    "format": "prettier --write \"**/*.{ts,js,vue,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,vue,json,md}\"",
    "type-check": "npm run build:shared && cd apps/backend && npm run type-check && cd ../frontend && npm run type-check && cd ../packages/shared && npm run type-check",
    "docker:up": "docker-compose up -d --build",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:up:sit": "docker-compose -f docker-compose.sit.yml up -d --build",
    "docker:down:sit": "docker-compose -f docker-compose.sit.yml down",
    "docker:logs:sit": "docker-compose -f docker-compose.sit.yml logs -f",
    "docker:up:prod": "docker-compose -f docker-compose.production.yml up -d --build",
    "docker:down:prod": "docker-compose -f docker-compose.production.yml down",
    "docker:logs:prod": "docker-compose -f docker-compose.production.yml logs -f",
    "clean": "cd apps/backend && npm run prebuild && cd ../frontend && rm -rf dist",
    "fix": "npm run format && npm run lint",
    "fix:check": "npm run format:check && npm run lint:check",
    "update:project-structure": "node .cursor/scripts/update-project-structure.js"
  },
  "devDependencies": {
    "@types/babel__core": "^7.20.5",
    "@types/babel__template": "^7.4.4",
    "@types/body-parser": "^1.19.6",
    "@types/express": "^5.0.3",
    "@types/express-serve-static-core": "^5.1.0",
    "@types/graceful-fs": "^4.1.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/parse-json": "^4.0.2",
    "@types/qs": "^6.14.0",
    "@types/range-parser": "^1.2.7",
    "@types/serve-static": "^1.15.9",
    "@types/stack-utils": "^2.0.3",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.3",
    "localtunnel": "^2.0.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "class-validator": "0.14.3",
    "element-plus": "^2.11.4",
    "lucide-vue-next": "^0.545.0",
    "nestjs": "^0.0.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pinia": "^3.0.3",
    "typeorm": "^0.3.10",
    "u": "^0.1.0"
  }
}
